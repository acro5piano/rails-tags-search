= form_for @applicant do |f|
  - if @applicant.errors.any?
    #error_explanation
      %h2= "#{pluralize(@applicant.errors.count, "error")} prohibited this applicant from being saved:"
      %ul
        - @applicant.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :age
    = f.number_field :age

  .field
    = label_tag :tag
    = collection_select :applicant, :tag_ids, Tag.all, :id, :applicant_count,
            {}, multiple: true, selected: true, class: 'form-control'

  .actions
    = f.submit '保存', class: 'btn btn-primary'
